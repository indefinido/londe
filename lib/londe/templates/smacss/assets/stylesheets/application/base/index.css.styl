 *= require_self
 */

@import '../theme'

body
  background url('/assets/bg.jpg')

a
  transition color 0.3s
  &:hover
    // color on-color
    text-decoration none

button
  border none

table

  border-collapse separate
  width 100%

  td
    vertical-align top

form
  a
    color secondary-color
    font-size 0.8em
    font-weight bold
    line-height 1em
    &:hover
      color secondary-color

select,
textarea,
input[type="text"],
input[type="password"],
input[type="datetime"],
input[type="datetime-local"],
input[type="date"],
input[type="month"],
input[type="time"],
input[type="week"],
input[type="number"],
input[type="email"],
input[type="url"],
input[type="search"],
input[type="tel"],
input[type="color"],
.uneditable-input
  background #FFF
  border none
  border-radius 0
  box-shadow none
  height 1.3em
  line-height 1.3em
  margin 0
  max-width 100%
  padding 2px
  width 100%

input[type="file"]
  height auto
  line-height 1em

select
  height 1.7em
  line-height 1.7em

fieldset
  margin 20px 0 10px
  width auto

legend
  border none
  font-size 1em
  font-weight bold
  line-height 1em
  margin 0
  padding 0

label
  margin-bottom 0
  font-weight bold
  width 110%

hr
  background none
  border none
  clearfix()
  width 100%

.clearfix
  clearfix()